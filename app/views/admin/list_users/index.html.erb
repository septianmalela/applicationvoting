<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">Advanced Search</h4>
        <p class="card-category">Advances Search</p>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: admin_list_users_path do |f| %>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :email_cont, 'Search By Email' %>
            <%= f.search_field :email_cont, class: 'form-control' %>
          </div>

          <div class="col-md-6">
            <%= f.label :name_cont, 'Search By Name' %>
            <%= f.search_field :name_cont, class: 'form-control' %>
          </div>
        </div>

          <%= f.submit 'Search', class: 'btn btn-primary' %>
          <%= link_to "Reset", admin_list_users_path, class: 'btn btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">List User</h4>
        <p class="card-category">List User</p>
      </div>
      <div class="card-body">
        <%= link_to "New List User", new_admin_list_user_path, class: 'btn btn-success' %>
        <div class="table-responsive">
          <table class="table">
            <thead class=" text-primary">
              <tr>
                <th>No</th>
                <th>Email</th>
                <th>Name</th>
                <th>Angkatan</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @list_users.each_with_index do |user, idx| %>
                <tr>
                  <td><%= idx+1 %></td>
                  <td><%= user.email %></td>
                  <td><%= user.name %></td>
                  <td><%= user.angkatan %></td>
                  <td class="text-right">
                    <%= link_to 'Edit', edit_admin_list_user_path(user), class: 'btn btn-primary' %>
                    <%= link_to 'Delete', admin_list_user_path(user), class: 'btn btn-danger', data: { confirm: "Are you sure?" },method: :delete %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>