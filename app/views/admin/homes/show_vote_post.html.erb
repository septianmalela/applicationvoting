<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">List Vote <%= "#{@post.name_1} - #{@post.name_2}" %></h4>
        <p class="card-category">List Vote Post</p>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <h4>Total Vote : <%= @post.votes_for.size %></h4>
          <table class="table">
            <thead class=" text-primary">
              <tr>
                <th>No</th>
                <th>Email</th>
                <th>Full Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @user_votes.each_with_index do |user, idx| %>
                <tr>
                  <td><%= idx+1 %></td>
                  <td><%= user.voter.email %></td>
                  <td><%= user.voter.full_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>