<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title">Show User</h4>
        <p class="card-category">Show User</p>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="form-group">
            <h4>Full Name :</h4>
            <h5><%= @user.full_name %></h5>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <h4>Email :</h4>
            <h5><%= @user.email %></h5>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <h4>NPM :</h4>
            <h5><%= @user.npm %></h5>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <h4>Angkatan :</h4>
            <h5><%= @user.angkatan %></h5>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <h4>Jadwal Vote :</h4>
            <h5><%= "#{date_time(@user.jadwal_vote.start_time)} - #{get_time(@user.jadwal_vote.end_time)}" %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card card-profile">
      <div class="card-avatar">
        <a href="#pablo">
          <img class="img" src="" alt="PHOTO USER">
        </a>
      </div>
      <div class="card-body">
        <h4 class="card-title"><%= @user.full_name %></h4>
        <p class="card-description">
          <%= @user.email %>
        </p>
      </div>
    </div>
  </div>
</div>